<div class='all-articles'>
    <h1>Articles</h1>

    <ul>
        <% @articles.each do |article| %>
            <li class='article'>
                <h2 class='article-title'>
                    <%= link_to article.title, article %>
                </h2>
                <p class='article-body'>
                    <%= article.body %>
                </p>
            </li>
        <% end %>
    </ul>

    <div class="btn-bg">
        <%= link_to "Create Article", new_article_path %>
    </div>
</div>
